{% extends 'AGUserBundle::base.html.twig' %}

{% block return %}
    <div class="row">
        <div class="col-xs-1 col-lg-offset-3 col-md-offset-2 col-sm-offset-1">
            <a href="{{ path('fos_user_profile_show') }}"><span class="glyphicon glyphicon-circle-arrow-left"></span></a>
        </div>
    </div>
{% endblock %}

{% block h1_title %}<span class="glyphicon glyphicon-edit"></span> Modifier mon compte{% endblock %}

{% block user_bundle_content  %}
    {% trans_default_domain 'FOSUserBundle' %}
    <div class="row">
        <div class="col-lg-4 col-lg-offset-4 col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1">
            <form action="{{ path('fos_user_profile_edit') }}" {{ form_enctype(form) }} method="POST" class="fos_user_profile_edit">
                <div class="form-group">
                    {{ form_label(form.username, "Nom d'utilisateur") }} :
                    {{ form_errors(form.username) }}
                    {{ form_widget(form.username, {'attr' : {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.email, "Adresse mail") }} :
                    {{ form_errors(form.email) }}
                    {{ form_widget(form.email, {'attr' : {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.current_password, "Mot de passe actuel") }} :
                    {{ form_errors(form.current_password) }}
                    {{ form_widget(form.current_password, {'attr' : {'class': 'form-control'}}) }}
                </div>
                {{ form_rest(form) }}
                <div>
                    <input class="btn btn-default" type="submit" value="{{ 'profile.edit.submit'|trans }}" />
                </div>
            </form>
        </div>
    </div>
{% endblock %}