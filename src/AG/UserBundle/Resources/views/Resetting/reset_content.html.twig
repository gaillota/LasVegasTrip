{% trans_default_domain 'FOSUserBundle' %}

<div class="row">
    <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1 text-center">
        <h1><img class="img-responsive img-thumbnail" src="{{ asset('img/las-vegas-night.jpg') }}" alt="Las Vegas"/></h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-4 col-lg-offset-4 col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1">
        <form action="{{ path('fos_user_resetting_reset', {'token': token}) }}" {{ form_enctype(form) }} method="POST" class="fos_user_resetting_reset">
            {% form_theme form 'bootstrap_3_layout.html.twig' %}
            {{ form_widget(form) }}
            <div>
                <input class="btn btn-default" type="submit" value="{{ 'resetting.reset.submit'|trans }}" />
            </div>
        </form>
    </div>
</div>