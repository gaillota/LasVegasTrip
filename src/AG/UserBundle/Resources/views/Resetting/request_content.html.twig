{% trans_default_domain 'FOSUserBundle' %}

<div class="row">
    <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1 text-center">
        <h1><img class="img-responsive img-thumbnail" src="{{ asset('img/las-vegas-night.jpg') }}" alt="Las Vegas"/></h1>

        {% if invalid_username is defined %}
            <div class="alert alert-danger">
                {{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}) }}
            </div>
        {% endif %}
    </div>
</div>
<div class="row">
    <div class="col-lg-4 col-lg-offset-4 col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1">
        <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
            <div class="form-group">
                <label for="username">{{ 'resetting.request.username'|trans }}</label>
                <input class="form-control" type="text" id="username" name="username" required="required" />
            </div>
            <div>
                <input type="submit" class="btn btn-default" value="{{ 'resetting.request.submit'|trans }}" />
            </div>
        </form>
    </div>
</div>