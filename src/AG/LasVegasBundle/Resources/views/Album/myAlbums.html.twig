{% extends 'AGLasVegasBundle::base.html.twig' %}

{% block lasvegasbundle_body %}
    <div class="row">
        <div class="col-xs-12 text-center">
            <h2><i class="fa fa-camera-retro"></i> Mes Albums</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
            <div class="panel panel-success">
                <div class="panel-heading">Mes Albums</div>
                    <ul class="list-group">
                        {% for album in listAlbums %}
                            <li class="list-group-item">
                                <a href="{{ path('ag_album_show', { 'id': album.id }) }}">{{ album.name }}</a>
                                <div class="pull-right">
                                    <a class="btn btn-info btn-xs" href="{{ path('ag_album_show', { 'id': album.id }) }}"><i class="fa fa-search"></i> <span class="hidden-xs">Voir</span></a>
                                    <a class="btn btn-warning btn-xs"
                                       href="{{ path('ag_album_edit', { 'id': album.id }) }}"><i class="fa fa-cog"></i>
                                        <span class="hidden-xs">Editer</span></a>
                                    <a class="btn btn-danger btn-xs" href="{{ path('ag_album_remove', { 'id': album.id }) }}"><i class="fa fa-times"></i> <span class="hidden-xs">Supprimer</span></a>
                                </div>
                            </li>
                        {% endfor %}
                    </ul>
            </div>
        </div>
    </div>
{% endblock %}