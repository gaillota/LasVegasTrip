{% extends '::admin.html.twig' %}

{% block breadcrumb %}
    {{ parent() }}
    <li><a href="{{ path('ag_album_admin_index') }}">Albums</a></li>
    <li class="active">Suppression</li>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-12">
            <h2>Supprimer l'album {{ album.name }}</h2>
            <hr/>
            <p>Êtes-vous sûr de vouloir supprimer l'album "{{ album.name }}" ?</p>
            <form action="" method="POST">
                <a class="btn btn-default" href="{{ path('ag_album_admin_index') }}">
                    <span class="glyphicon glyphicon-chevron-left"></span> Retour à l'admin
                </a>
                <button class="btn btn-danger" type="submit">
                    <i class="glyphicon glyphicon-trash"></i>
                    Supprimer
                </button>
                {{ form_rest(form) }}
            </form>
        </div>
    </div>
{% endblock %}